@inherits Umbraco.Cms.Web.Common.Macros.PartialViewMacroPage

@using GateEntryExit_Umbraco.Services.Interfaces;

@inject IGateService _gateService;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor _httpContextAccessor

@{
    var pageNumber = _httpContextAccessor.HttpContext.Request.Query["pageNumber"].FirstOrDefault();
    if(pageNumber == null)
    {
        pageNumber = "1";
    }
    var allGate = await _gateService.GetAllAsync(Convert.ToInt32(pageNumber));
    var totalItems = allGate.TotalCount;
    var items = allGate.Items;
    var pageSize = 5;
    var totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
}

@functions{

}

<div class="contianer">
    <div class="row">
        <div class="col-md-6">
            <h2>Gates from Asp.Net Core Web API</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var gate in items)
                    {
                        <tr>
                            <td>@gate.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav>
                <ul class="pagination justify-content-end">
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?pageNumber=@(i)">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
        <div class="col-md-6">
            <h2>Gate employees from Java Spring Boot</h2>
        </div>
    </div>
</div>
